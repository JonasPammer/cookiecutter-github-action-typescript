{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "plugins": ["jest", "github", "@typescript-eslint"],
  "extends": [
    "plugin:github/recommended",
    "plugin:github/typescript",
    "plugin:@typescript-eslint/strict"
  ],
  "rules": {
    // Explicitly disabling eslint base rules
    // that are being replaced/enhanced by typescript-eslint's "extension rules" included in the defined preset
    // to avoid reporting of incorrect errors:
    "brace-style": "off",
    "dot-notation": "off",
    "no-array-constructor": "off",
    "no-empty-function": "off",
    "no-extra-semi": "off",
    "no-implied-eval": "off",
    "no-loss-of-precision": "off",
    "no-throw-literal": "off",
    "no-unused-vars": "off",
    "no-useless-constructor": "off",
    "require-await": "off",

    // Enabling typescript-eslint's "extension rules" not enabled by plugin's preset (and disabling their base ones):
    "no-invalid-this": "off",
    "@typescript-eslint/no-invalid-this": ["error"],
    "no-use-before-define": "off",
    "@typescript-eslint/no-use-before-define": ["error"]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        // Enabling typescript-eslint rules not enabled by plugin's preset:
        "@typescript-eslint/consistent-type-exports": ["error"],
        "@typescript-eslint/consistent-type-imports": ["error"],
        "@typescript-eslint/explicit-function-return-type": ["error"],
        "@typescript-eslint/explicit-member-accessibility": ["error"],
        "@typescript-eslint/member-delimiter-style": ["error"],
        "@typescript-eslint/method-signature-style": ["error"],
        "@typescript-eslint/no-confusing-void-expression": ["error"],
        "@typescript-eslint/prefer-readonly-parameter-types": ["error"],
        "@typescript-eslint/strict-boolean-expressions": ["error"],
        "@typescript-eslint/switch-exhaustiveness-check": ["warn"]
      }
    }
  ]
}
